@using E_LearningWebApp.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity
@using E_LearningWebApp.Models

@inject SignInManager<E_LearningWebAppUser> SignInManager
@inject UserManager<E_LearningWebAppUser> UserManager
<head>
    <meta charset="utf-8">
    <meta Content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Temari-Online School</title>
    <meta Content="" name="description">
    <meta Content="" name="keywords">

    <!-- Favicons -->
    <link href="~/Content/assets/img/favicon.png" rel="icon">
    <link href="~/Content/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">


    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>iofrm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
    @*  <link rel="stylesheet" href="~/content/iofrm-form/css/style.css">
    <link rel="stylesheet" href="~/content/iofrm-form/css/responsive.css"> *@


    <!-- Vendor CSS Files -->
    <link rel="stylesheet" href="~/Content/assets/vendor/animate.css/animate.min.css">
    <link rel="stylesheet" href="~/Content/assets/vendor/aos/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/assets/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/content/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/content/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/content/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="~/content/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link rel="stylesheet" href="~/content/assets/css/style.css">
    <link rel="stylesheet" href="~/Content/css/courses.css" asp-append-version="true">
    <style>
        header {
            display: flex;
        }

        .breadcrumbs{
            margin-top: 0;
        }

        .a-links {
            color: #000000;
        }

        .a-links:hover {
            color: lightgreen;
        }

        .prof a-links:hover {
            border: none;
        }
        body{
            background-color: white;
        }
    </style>
    
</head>

<body>


    <aside>
        <img src="~/content/logincss/logo.jpg" alt="">
        <nav>
            <a class="a-links" asp-controller="Admin" asp-action="Index"><i class="fas fa-house"></i> Home</a>
            <a class="a-links" asp-controller="Course" asp-action="GetAllCourses"><i class="fas fa-book"></i> Courses</a>
            <a class="a-links" asp-area="Identity" asp-controller="Course" asp-action="ConceptsAdmin"><i class="fas fa-lightbulb"></i> Concepts</a>
            <a class="a-links" asp-controller="User" asp-action="ListUsers"><i class="fas fa-users"></i> Students</a>
            <a class="a-links" asp-area="Identity" asp-controller="Role" asp-action="Index"><i class="fas fa-user"></i>Roles</a>
            <a class="a-links" asp-controller="Home" asp-action="Index"><i class="fas fa-sign-out-alt"></i> Logout</a>


            


            @*             <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login"><i class="fas fa-sign-out-alt"></i> Logout</a>
            *@
        </nav>

    </aside>




    <header>
        <h2>Learn Today Lead Tomorrow</h2>
        <div class="prof">
            <a class="a-links" asp-controller="User" asp-action="Profile"><i class="fas fa-user"></i> @UserManager.GetUserName(User) </a>
        </div>
    </header>

    <main>

        <section class="current_progress">
            @RenderBody()

        </section>

    </main>


    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-Content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/Content/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/Content/assets/vendor/aos/aos.js"></script>
    <script src="~/Content/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/Content/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Content/assets/js/main.js"></script>
</body>


@RenderSection( "Scripts",required:false)
