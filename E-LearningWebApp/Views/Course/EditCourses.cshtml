@model E_LearningWebApp.Models.Courses

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "EditCourses";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />

    <title>User Dashboard</title>
    <link rel="stylesheet" href="~/Content/css/courses.css">
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            showToast();
        });

        function showToast() {
            var toaster = document.getElementById('toaster');
            toaster.classList.add('show'); // Show the toaster

            // Hide the toaster after  3 seconds
            setTimeout(function () {
                toaster.classList.remove('show');
            }, 3000);
        }
    </script>
    <style>
        body{
            width: 85vw;
            background-color: white;
        }
    </style>
</head>
<body>
    <h1>EditCourses</h1>
    <hr />
    @* <div class="toast-body alert-success">
        Course Eddited Successfully!
    </div> *@
    <div class="row">
        <div class="card mb-4 shadow-sm" style="width: 25rem; height: 200px; padding-left: 10px">
            <img src="@Model.imagePath" width="150" height="300" class="card-img-top" alt="...">
        </div>
        <div style=" width: 5rem;"></div>
        <div class="col-md-4">
            <form  asp-controller="Course" asp-action="EditCourses" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CourseName" class="control-label"></label>
                    <input asp-for="CourseName" class="form-control" />
                    <span asp-validation-for="CourseName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CourseCode" class="control-label"></label>
                    <input asp-for="CourseCode" class="form-control" />
                    <span asp-validation-for="CourseCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CourseDescription" class="control-label"></label>
                    <input asp-for="CourseDescription" class="form-control" />
                    <span asp-validation-for="CourseDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CoursePrice" class="control-label"></label>
                    <input asp-for="CoursePrice" class="form-control" />
                    <span asp-validation-for="CoursePrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CourseDuration" class="control-label"></label>
                    <input asp-for="CourseDuration" class="form-control" />
                    <span asp-validation-for="CourseDuration" class="text-danger"></span>
                </div>

   @* 
                <div class="form-group">
                    <label asp-for="imagePath" class="control-label"></label>
                    <input asp-for="@Model.imagePath" type="file" value="@Model.imagePath" class="form-control" readonly />
                    <span asp-validation-for="@Model.imagePath" class="text-danger"></span>
                </div> *@


                </br>
                <div class="form-group" >
                    <input type="submit" value="Update" class="btn btn-primary" style="background-color: green" />
                </div>
                <a asp-action="GetAllCourses">Back</a>
            </form>
        </div>
    </div>
 
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
