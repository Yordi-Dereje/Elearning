@model E_LearningWebApp.Models.CourseViewModel

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Course";
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <style>
            h4{
                color: black;
            }
        </style>
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            showToast();
        });

        function showToast() {
            var toaster = document.getElementById('toaster');
            toaster.classList.add('show'); // Show the toaster

            // Hide the toaster after  3 seconds
            setTimeout(function () {
                toaster.classList.remove('show');
            }, 3000);
        }
    </script>
    <br />
    </head>

<h4>New Course</h4>
<hr />

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />

    <title>User Dashboard</title>
    <link rel="stylesheet" href="~/Content/css/courses.css">
</head>
@* <div class="toast-body alert-success">
    Course Added Successfully!
</div> *@
<div class="row">
    <div class="col-md-4">
        <form action="/Course/CreateCourse" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseName" class="control-label">Course Name</label>
                <input asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseCode" class="control-label">Course code</label>
                <input asp-for="CourseCode" class="form-control" />
                <span asp-validation-for="CourseCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseDescription" class="control-label">Course Description</label>
                <input asp-for="CourseDescription" class="form-control" />
                <span asp-validation-for="CourseDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoursePrice" class="control-label">Course Price</label>
                <input asp-for="CoursePrice" class="form-control" />
                <span asp-validation-for="CoursePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseDuration" class="control-label">Course Duration</label>
                <input asp-for="CourseDuration" class="form-control" />
                <span asp-validation-for="CourseDuration" class="text-danger"></span>
            </div>
            <div class="form-group">"
                <label asp-for="imagePath" class="control-label">Image Path</label>
                <input asp-for="imagePath" type="file" class="form-control">
                    <span asp-validation-for="imagePath" class="text-danger"></span>
            </div>

           

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="background-color: green" />
            </div>
        </form>
    </div>
</div>

@* <div>
    <a asp-action="GetAllCourses">Back to List</a>
</div> *@
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
