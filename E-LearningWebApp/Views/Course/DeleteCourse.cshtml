@model E_LearningWebApp.Models.Courses

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "DeleteCourse";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />

    <title>User Dashboard</title>
    <link rel="stylesheet" href="~/Content/css/courses.css">
    <style>
        dt{
            color:  black;
        }
    </style>
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            showToast();
        });

        function showToast() {
            var toaster = document.getElementById('toaster');
            toaster.classList.add('show'); // Show the toaster

            // Hide the toaster after  3 seconds
            setTimeout(function () {
                toaster.classList.remove('show');
            }, 3000);
        }
    </script>
    <br />
</head>
<body>

<h3 style="color: black">Are you sure you want to delete this?</h3>
    <div class="toast-body alert-success">
       Course Deleted Successfully!
    </div>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CourseCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CourseDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CoursePrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CoursePrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CourseDuration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseDuration)
        </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.imagePath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.imagePath)
            </dd>
    </dl>
    
    <form asp-action="DeleteCourse">
        <input type="hidden" asp-for="CourseId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="GetAllCourses">Back to List</a>
    </form>
</div>
</body>